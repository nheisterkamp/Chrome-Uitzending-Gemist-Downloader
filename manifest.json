{
  "name": "Uitzending Gemist Downloader",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Download afleveringen van Uitzending Gemist.",
  "homepage_url": "https://chrome.google.com/webstore/detail/onogpacodgjlaoicjnmbfnigmbojmnlc",
  "icons": {
  		"16": "img/icon-16.png",
  		"48": "img/icon-48.png",
  		"128": "img/icon-128.png"
  },
  "background": {
	  "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.uitzendinggemist.nl/*"],
      "css": ["content.css"],
      "js": ["date.js", "jquery.js", "content.js"]
    }
  ],
  "minimum_chrome_version": "17",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.omroep.nl/",
    "*://*.uitzendinggemist.nl/"
  ],
  "web_accessible_resources": ["img/download.png", "img/download-black.png"]
}