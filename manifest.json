{
  "name": "Uitzending Gemist Downloader",
  "options_page": "options_page.html",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Download afleveringen van Uitzending Gemist en RTL XL.",
  "homepage_url": "https://github.com/luukd/Chrome-Uitzending-Gemist-Downloader",
  "icons": {
  		"16": "img/icon-16.png",
  		"48": "img/icon-48.png",
  		"128": "img/icon-128.png"
  },
  "background": {
	  "scripts": ["options_background.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.uitzendinggemist.nl/*"],
      "css": ["content.css"],
      "js": ["options.js", "date.js", "jquery.js", "uitzendinggemist.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.rtlxl.nl/*"],
      "css": ["content.css"],
      "js": ["options.js", "jquery.js", "inject.js", "rtlxl_inject.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "25",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.omroep.nl/",
    "*://*.uitzendinggemist.nl/",
    "*://*.rtlxl.nl/*",
    "*://*.rtl.nl/*",
    "*://*.*.rtl.nl/*"
  ],
  "web_accessible_resources": [
    "img/download.png",
    "img/download-2.png",
    "img/download-black.png",
    "content.css",
    "rtlxl.js"
  ]
}
